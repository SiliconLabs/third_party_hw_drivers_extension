project_name: mikroe_mic2
package: platform
label: Third Party Hardware Drivers - MIC 2 Click (Mikroe)
description: |
  This example project shows an example for Mikroe MIC 2 Click board driver integration.
category: Example|Platform
quality: evaluation

filter:
- name: Device Type
  value: [SoC]
- name: MCU
  value: [32-bit MCU]
- name: Project Difficulty
  value: [Beginner]

readme:
- path: ../../documentation/example/mikroe_mic2/README.md

source:
- path: app.c
- path: main.c

include:
- path: ''
  file_list:
  - path: app.h

component:
- id: sl_system
- id: device_init
- id: sleeptimer
- id: mic2
  from: third_party_hw_drivers
- id: iostream_usart
  instance: [vcom]
- id: app_log

toolchain_settings:
  - option: gcc_linker_option
    value: "-u _printf_float"

define:
  - name: DEBUG_EFM

sdk_extension:
- id: third_party_hw_drivers
  version: 3.0.0

other_file:
  - path: ../../documentation/example/mikroe_mic2/image/create_example.png
    directory: "image"
  - path: ../../documentation/example/mikroe_mic2/image/hardware_connection.png
    directory: "image"
  - path: ../../documentation/example/mikroe_mic2/image/install_float.png
    directory: "image"
  - path: ../../documentation/example/mikroe_mic2/image/software_layer.png
    directory: "image"
  - path: ../../documentation/example/mikroe_mic2/image/console_log.png
    directory: "image"

ui_hints:
  highlight:
    - path: README.md
      focus: true